// Brown Door
fill( 205,133,63 );
rect( 140,120, 20,90 );
// Grass
fill( 0,180,0 );
noStroke();
rectMode( CORNERS );
rect( 0,150, width,height ); 
// Tree Trunk
fill( 165,42,42 );              
rect( 470,150, 430,70 );
// Message
text( "Julio Moya", 15,10 );
text( "I Cant Make The            Sun Move", 190,40);
// Green Tree
fill( 0,100,0 );
ellipse( 450,50, 90,90 );
// Window 1
fill( 102,255,255 );
rect( 110,130, 125,110 );
// Window 2
fill( 102,255,255 );
rect( 190,130, 175,110 );
// Street
fill( 0,0,0 );
rect( 0,300, 600,205);
// Median
fill( 255,255,255 );
rect( 5,252, 40,248);
fill( 255,255,255 );
rect( 60,252, 100,248);
fill( 255,255,255 );
rect( 120,252, 160,248);
fill( 255,255,255 );
rect( 180,252, 220,248);
fill( 255,255,255 );
rect( 240,252, 280,248);
fill( 255,255,255 );
rect( 300,252, 340,248);
fill( 255,255,255 );
rect( 360,252, 400,248);
fill( 255,255,255 );
rect( 420,252, 460,248);
fill( 255,255,255 );
rect( 480,252, 520,248);
fill( 255,255,255 );
rect( 540,252, 580,248);
//Green Monster  
fill( 0,255,0 );
