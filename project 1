//Julio Moya ... Project 1


float sunX, sunY;        // Position of sun 
float dx, dy;
//// SETUP:creen size, set modes.
void setup()
{
  size( 600, 400 );
  reset();
}
void reset() {
  sunX=  width/2;         //sun half-way across the screen.
  sunY=  50;
// Blue sky
background( 102, 255, 255 );
